# Chrome
window-decoration = false
macos-non-native-fullscreen = padded-notch
mouse-hide-while-typing = true

# Colors
theme = "Gruvbox Dark Hard"
font-family="Iosevka Fixed"
font-size=15
background=#0c0f0e

# Key bindings
keybind = cmd+enter=toggle_fullscreen
keybind = opt+right=unbind
keybind = opt+left=unbind
keybind = opt+space=text:\x20
